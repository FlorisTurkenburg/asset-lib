language: php

node_js:
  - "node"
  - "8"

sudo: false

cache:
  directories:
    - "$HOME/.composer/cache"

env:
  - COMPOSER_FLAGS=""

matrix:
  include:
    - language: php
      php: 7.1
      env: COMPOSER_FLAGS="--prefer-lowest"
      script: vendor/bin/phpunit
    - language: php
      php: 7.1
      env: COMPOSER_FLAGS="--prefer-stable"
      script: vendor/bin/phpunit
    - language: php
      php: 7.1
      env: COMPOSER_FLAGS=""
      script: vendor/bin/phpunit
    - language: node_js
      node_js: 8.5.0
      script: node_modules/.bin/jasmine

install:
  - composer update $COMPOSER_FLAGS --prefer-dist
  - npm install

